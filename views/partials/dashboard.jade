    .row
      .col-lg-8
      
        // Area Chart
        .panel.panel-default
          .panel-heading
            i.fa.fa-bar-chart-o.fa-fw
            |  Area Chart Example
            .pull-right
              .btn-group
                button.btn.btn-default.btn-xs.dropdown-toggle(type='button', data-toggle='dropdown')
                  | Actions
                  span.caret
                ul.dropdown-menu.pull-right(role='menu')
                  li
                    a(href='dashboard#') Action
                  li
                    a(href='dashboard#') Another action
                  li
                    a(href='dashboard#') Something else here
                  li.divider
                  li
                    a(href='dashboard#') Separated link
          .panel-body
            #morris-area-chart 
            
        // Bar Chart 
        .panel.panel-default
          .panel-heading
            i.fa.fa-bar-chart-o.fa-fw
            |  Bar Chart Example
            .pull-right
              .btn-group
                button.btn.btn-default.btn-xs.dropdown-toggle(type='button', data-toggle='dropdown')
                  | Actions
                  span.caret
                ul.dropdown-menu.pull-right(role='menu')
                  li
                    a(href='dashboard#') Action
                  li
                    a(href='dashboard#') Another action
                  li
                    a(href='dashboard#') Something else here
                  li.divider
                  li
                    a(href='dashboard#') Separated link
          .panel-body
            .row
              .col-lg-4
                .table-responsive
                  table.table.table-bordered.table-hover.table-striped
                    thead
                      tr
                        th #
                        th Date
                        th Time
                        th Amount
                    tbody
                      tr(ng-repeat='tableRow in dashboardTable')
                        td {{tableRow.ID}}
                        td {{tableRow.Date}}
                        td {{tableRow.Time}}
                        td {{tableRow.Amount}}
              .col-lg-8
                #morris-bar-chart 
                
                
        // Responsive Timeline
        .panel.panel-default
          .panel-heading
            i.fa.fa-clock-o.fa-fw
            | Responsive Timeline
          .panel-body
            ul.timeline
              li(ng-repeat='lineItem in timeline', ng-class-even="'timeline-inverted'")
                .timeline-badge(class='{{lineItem.Type}}', ng-if='lineItem.Type!=""')
                  i.fa(class='fa-{{lineItem.Icon}}')
                .timeline-panel
                  .timeline-heading
                    h4.timeline-title {{lineItem.Heading}}
                    p(ng-if='lineItem.Timestamp!=null')
                      small.text-muted
                        i.fa.fa-clock-o
                        |  {{lineItem.Timestamp}}
                  .timeline-body
                    p
                      | {{lineItem.Body}}
                    hr(ng-if='lineItem.Menu!=null')
                    .btn-group(ng-if='lineItem.Menu!=null')
                      button.btn.btn-primary.btn-sm.dropdown-toggle(type='button', data-toggle='dropdown')
                        i.fa.fa-gear
                        span.caret
                      ul.dropdown-menu(role='menu')
                        li(ng-repeat='menuItem in lineItem.Menu')
                          a(href='{{menuItem.URL}}') {{menuItem.Item}}

      .col-lg-4
      
        // Notifications
        .panel.panel-default
          .panel-heading
            i.fa.fa-bell.fa-fw
            |  Notifications Panel
          .panel-body
            .list-group
              a.list-group-item(href='dashboard#', ng-repeat='listItem in notifications')
                i.fa.fa-fw(class="fa-{{listItem.Icon}}")
                |  {{listItem.Subject}}
                span.pull-right.text-muted.small
                  em {{listItem.DateTime}}
            a.btn.btn-default.btn-block(href='dashboard#') View All Alerts 
        
        
        // Donut Chart
        .panel.panel-default
          .panel-heading
            i.fa.fa-bar-chart-o.fa-fw
            |  Donut Chart Example
          .panel-body
            #morris-donut-chart
            a.btn.btn-default.btn-block(href='dashboard#') View Details
            
            
        // Chat Panel    
        .chat-panel.panel.panel-default
          .panel-heading
            i.fa.fa-comments.fa-fw
            |  Chat
            .btn-group.pull-right
              button.btn.btn-default.btn-xs.dropdown-toggle(type='button', data-toggle='dropdown')
                i.fa.fa-chevron-down
              ul.dropdown-menu.slidedown
                li
                  a(href='dashboard#')
                    i.fa.fa-refresh.fa-fw
                    | Refresh
                li
                  a(href='dashboard#')
                    i.fa.fa-check-circle.fa-fw
                    | Available
                li
                  a(href='dashboard#')
                    i.fa.fa-times.fa-fw
                    | Busy
                li
                  a(href='dashboard#')
                    i.fa.fa-clock-o.fa-fw
                    | Away
                li.divider
                li
                  a(href='dashboard#')
                    i.fa.fa-sign-out.fa-fw
                    | Sign Out
          .panel-body
            ul.chat
              li.left.clearfix(ng-repeat='chat in chat', ng-switch="$even")
                span.chat-img(ng-class-odd="'pull-left'", ng-class-even="'pull-right'")
                  img.img-circle(ng-switch-when="true", src='http://placehold.it/50/55C1E7/fff', alt='User Avatar')
                  img.img-circle(ng-switch-when="false", src='http://placehold.it/50/FA6F57/fff', alt='User Avatar')
                .chat-body.clearfix
                  .header
                    strong.primary-font {{chat.Name}}
                    small.pull-right.text-muted
                      i.fa.fa-clock-o.fa-fw
                      | {{chat.Time}}
                  p
                    | {{chat.Message}}

          .panel-footer
            .input-group
              input#btn-input.form-control.input-sm(type='text', placeholder='Type your message here...')
              span.input-group-btn
                button#btn-chat.btn.btn-warning.btn-sm
                  | Send